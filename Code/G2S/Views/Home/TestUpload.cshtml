</head>
<body>
    <form action="/" method="post">
        <div id="uploader">

        </div>
        <p>123</p>
        <div id="uploader2">

        </div>
        <input type="hidden" name="uploadhidden" id="uploadhidden" />
        <input type="hidden" name="uploadhidden2" id="uploadhidden2" />

        <input type="submit" name="提交" value="submit" />
    </form>
    </body>
