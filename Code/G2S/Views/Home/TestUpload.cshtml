<script>
    $(function () {
        $("#uploader").powerWebUpload({
            hiddenInputId: "uploadhidden"
        });
        $("#uploader2").powerWebUpload({
            hiddenInputId: "uploadhidden2",
            PostbackHold: true,
            ShowDownload: true
        });
    })
</script>
