@using IES.Service.Common;
<!DOCTYPE html>
<html lang="en" ng-app="microModule">
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@(PageData["title"] ?? "课程中心4.0")</title>
    <meta name="description" content="@PageData["description"]">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    @Styles.Render("~/content/css/LayoutMicro")
    <script>
        //应用程序根目录-->  结果('/')||('/g2s')
        window.appPatch = "@Request.ApplicationPath" == "/" ? "" : "@Request.ApplicationPath";
    </script>
</head>
<body>
    <div class="wrap">
        @RenderPage("Top.cshtml")
        @*<div ui-view>
                @RenderBody()
            </div>*@
        <div class="micro_wrap">
            <div class="micro_index micro_index2">
                <h2 class="course_tit">微课程</h2>
                <div class="step_wrap">
                    <ul class="step_nav">
                        <li ng-class="{active:$state.includes('microCreate')}" class="first_child index4"><a style="cursor:pointer;" ui-sref="microCreate">1.填写基本信息</a></li>
                        <li ng-class="{active:$state.includes('microTest')}" class="index3"><a style="cursor:pointer;" ui-sref="microTest">2.添加测试</a></li>
                        @*<li ng-class="{active:$state.includes('course.overview')}" class="index2"><a style="cursor:pointer;" ui-sref="course.overview">3.见面课设计</a></li>*@
                        <li ng-class="{active:$state.includes('microPublish')}"><a style="cursor:pointer;" ui-sref="microPublish">4.申请发布</a></li>
                    </ul>
                    <div class="course_btn">
                        <a class="icon_24 icon_list" href="#"></a>
                        <a class="icon_24 icon_eye" href="#"></a>
                        <a class="icon_24 icon_home" href="#"></a>
                        <a href="https://www.baidu.com/" target="_blank">如何创建好课程？</a>
                    </div>
                    <div ui-view>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <div>@RenderPage("Foot.cshtml")</div>
        <a class='icon backto_top' href='#' onclick="$('body,html').animate({ scrollTop: 0 }, 300);"></a>
    </div>
    @Scripts.Render("~/js/framework")
    @Scripts.Render("~/js/micro")
</body>
</html>
