@using IES.Cache;
@using IES.Security;
@using IES.JW.Model;
@using IES.G2S.JW.BLL;
@using IES.Service;
@using IES.Service.Common;
@{
    var helpurl =Browse.appPatch + "/Views/Help/index";
    LogBLL bll = new LogBLL();
    List<SysLog> sysLoglist = bll.SysLog_Content_List();
}

<div class="right_header">
    <p class="freshman"><i class="icon icon_question"></i><a href=@helpurl target="_blank">新手向导</a></p>
    <div class="notice_box">
        <ul class="notice_list">
            @for (int i = 0; i < sysLoglist.Count; i++)
            {
                SysLog syslog = sysLoglist[i];
                if (i == 0)
                {
                    <li style="display:block;"><i class="icon notice_icon"></i>@syslog.Conten<p><span>@syslog.UpdateTime.ToString("yyyy-MM-dd hh:mm")</span></p></li>
                }
                else
                {
                    <li><i class="icon notice_icon"></i>@syslog.Conten<p><span>@syslog.UpdateTime.ToString("yyyy-MM-dd hh:mm")</span></p></li>
                }
            }

        </ul>
        <div class="notice_btn">

            <a class="icon prev_btn" href="javascript:;"></a>
            <a class="icon next_btn" href="javascript:;"></a>
        </div>
    </div>
</div>
