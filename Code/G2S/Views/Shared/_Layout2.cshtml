@using IES.Service.Common;

<!DOCTYPE html>

<html lang="en" ng-app="app">
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@(PageData["title"] ?? "课程中心4.0")</title>
    <meta name="description" content="@PageData["description"]">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    @Styles.Render("~/content/css/Layout2")
    <script>
    //应用程序根目录-->  结果('/')||('/g2s')
    window.appPatch = "@Request.ApplicationPath" == "/" ? "" : "@Request.ApplicationPath";
    </script>
</head>
<body>
    <div class="wrap">
        <div class="main_all2" id="ui-view" data-tmpl-url="@Request.RequestContext.RouteData.DataTokens["templateUrl"]">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/js/framework")
    @Scripts.Render("~/js/app")
    @Scripts.Render("~/js/Layout2")
</body>
</html>
